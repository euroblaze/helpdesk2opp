<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_crm_wizard_view_form" model="ir.ui.view">
        <field name="name">Create CRM Record</field>
        <field name="model">create.crm.wizard</field>
        <field name="arch" type="xml">
            <form string="Create CRM Opportunity">
                <div>
                    The following Opportunity will be created
                </div>
                <hr/>
                <h2><strong>Opportunity Name: </strong><field name="name"/></h2><br/>
                <p><strong>Responsible: </strong><field name="user_id"/></p><br/>
                <p><strong>Customer: </strong><field name="partner_id"/></p><br/>
                <footer>
                    <button string="Apply" name="action_apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
